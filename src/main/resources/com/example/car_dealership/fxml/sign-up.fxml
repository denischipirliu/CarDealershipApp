<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" styleClass="background" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.car_dealership.controllers.SignUpController">

   <children>
      <HBox alignment="CENTER" prefHeight="94.0" spacing="20">
         <CheckBox fx:id="adminCheckBox" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#handleCheck" prefHeight="17.0" prefWidth="70.0" text="Admin" />
         <CheckBox fx:id="clientCheckBox" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#handleCheck" prefHeight="17.0" prefWidth="70.0" text="Client" />
      </HBox>
      <VBox alignment="CENTER" spacing="10">
         <TextField fx:id="usernameField" alignment="CENTER" maxWidth="200" promptText="Username" />
         <PasswordField fx:id="passwordField" alignment="CENTER" maxWidth="200" promptText="Password" />
      </VBox>
      <VBox alignment="BOTTOM_CENTER" prefHeight="94.0" prefWidth="0.0" spacing="10">
         <Button fx:id="signUpButton" alignment="CENTER" contentDisplay="CENTER" text="Sign Up" />
         <Button fx:id="goBackButton" alignment="CENTER" contentDisplay="CENTER" text="Go Back" />
      </VBox>
   </children>
</VBox>
